    },
    "packages/now-playing": {
      "release-type": "node",
      "package-name": "@httpjpg/now-playing",
      "changelog-path": "CHANGELOG.md"
    },
    "packages/observability": {
      "release-type": "node",
      "package-name": "@httpjpg/observability",
      "changelog-path": "CHANGELOG.md"
    },
    "packages/security": {
      "release-type": "node",
      "package-name": "@httpjpg/security",
      "changelog-path": "CHANGELOG.md"
    },
    "packages/storyblok-api": {
      "release-type": "node",
      "package-name": "@httpjpg/storyblok-api",
      "changelog-path": "CHANGELOG.md"
    },
    "packages/storyblok-richtext": {
      "release-type": "node",
      "package-name": "@httpjpg/storyblok-richtext",
      "changelog-path": "CHANGELOG.md"
    },
    "packages/storyblok-sync": {
      "release-type": "node",
      "package-name": "@httpjpg/storyblok-sync",
      "changelog-path": "CHANGELOG.md"
    },
    "packages/storyblok-ui": {
      "release-type": "node",
      "package-name": "@httpjpg/storyblok-ui",
      "changelog-path": "CHANGELOG.md",
      "extra-files": [
        {
          "type": "json",
          "path": "package.json",
          "jsonpath": "$.peerDependencies['@httpjpg/ui']"
        }
      ]
    },
    "packages/storyblok-utils": {
      "release-type": "node",
      "package-name": "@httpjpg/storyblok-utils",
      "changelog-path": "CHANGELOG.md"
    },
    "packages/tokens": {
      "release-type": "node",
      "package-name": "@httpjpg/tokens",
      "changelog-path": "CHANGELOG.md"
    },
    "packages/typescript": {
      "release-type": "node",
      "package-name": "@httpjpg/tsconfig",
      "changelog-path": "CHANGELOG.md"
    },
    "packages/ui": {
      "release-type": "node",
      "package-name": "@httpjpg/ui",
      "changelog-path": "CHANGELOG.md",
      "extra-files": ["src/version.ts"]
    }
  },
  "release-type": "node",
  "bump-minor-pre-major": true,
  "bump-patch-for-minor-pre-major": true,
  "versioning": "default",
  "changelog-type": "default",
