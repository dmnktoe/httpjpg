{
  "name": "httpjpg-com",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "config"
  ],
  "packageManager": "pnpm@10.25.0",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=@httpjpg/web",
    "dev:docs": "turbo run dev --filter=@httpjpg/docs",
    "dev:storybook": "turbo run dev --filter=@httpjpg/storybook",
    "dev:https": "turbo run dev:https",
    "lint": "biome lint .",
    "lint:fix": "biome lint . --fix",
    "type-check": "turbo run type-check",
    "test": "jest --config test/config/jest.config.js",
    "test:watch": "jest --config test/config/jest.config.js --watch",
    "test:coverage": "jest --config test/config/jest.config.js --coverage",
    "clean": "turbo run clean && rm -rf node_modules",
    "prepare": "husky",
    "postinstall": "turbo run build --filter=@httpjpg/tokens"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@commitlint/types": "20.2.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "lint-staged": "^16.2.6",
    "ts-jest": "^29.4.6",
    "turbo": "^2.6.0",
    "typescript": "5.9.3"
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "biome check --write --no-errors-on-unmatched",
      "bash -c 'pnpm type-check'"
    ],
    "**/*.{js,jsx}": [
      "biome check --write --no-errors-on-unmatched"
    ],
    "**/*.json": [
      "biome format --write"
    ]
  },
  "pnpm": {
    "overrides": {
      "esbuild": "^0.25.0",
      "merge-anything": "^5.1.7",
      "package-manager-detector": "^0.2.6"
    }
  }
}
