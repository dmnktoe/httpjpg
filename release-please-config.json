{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "include-component-in-tag": true,
  "include-v-in-tag": false,
  "separate-pull-requests": true,
  "group-pull-request-title-pattern": "chore: release ${version}",
  "release-search-depth": 200,
  "pull-request-title-pattern": "chore${scope}: release${component} ${version}",
  "pull-request-header": "üéâ Release PR",
  "changelog-host": "https://github.com",
  "changelog-path": "CHANGELOG.md",
  "extra-files": [
    {
      "type": "json",
      "path": "package.json",
      "jsonpath": "$.version"
    }
  ],
  "packages": {
    "apps/docs": {
      "release-type": "node",
      "package-name": "@httpjpg/docs",
      "changelog-path": "CHANGELOG.md",
      "draft": false,
      "prerelease": false
    },
    "apps/storybook": {
      "release-type": "node",
      "package-name": "@httpjpg/storybook",
      "changelog-path": "CHANGELOG.md",
      "draft": false,
      "prerelease": false
    },
    "apps/web": {
      "release-type": "node",
      "package-name": "@httpjpg/web",
      "changelog-path": "CHANGELOG.md",
      "draft": false,
      "prerelease": false,
      "release-as": "1.0.0"
    },
    "packages/analytics": {
      "release-type": "node",
      "package-name": "@httpjpg/analytics",
      "changelog-path": "CHANGELOG.md"
    },
    "packages/consent": {
