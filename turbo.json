{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "stream",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "storybook-static/**",
        "dist/**",
        "packages/tokens/dist/**",
        "packages/ui/styled-system/**",
        "packages/ui/styles.css"
      ],
      "env": [
        "STORYBLOK_PREVIEW_TOKEN",
        "STORYBLOK_PREVIEW_SECRET",
        "STORYBLOK_REVALIDATE_SECRET",
        "STORYBLOK_MANAGEMENT_TOKEN",
        "STORYBLOK_SPACE_ID",
        "SENTRY_DSN",
        "SENTRY_ORG",
        "SENTRY_PROJECT",
        "SENTRY_AUTH_TOKEN",
        "SPOTIFY_CLIENT_ID",
        "SPOTIFY_CLIENT_SECRET",
        "SPOTIFY_REFRESH_TOKEN",
        "DATADOG_APPLICATION_ID",
        "DATADOG_CLIENT_TOKEN",
        "DATADOG_SITE",
        "DATADOG_SERVICE_NAME",
        "NEXT_PUBLIC_DATADOG_APPLICATION_ID",
        "NEXT_PUBLIC_DATADOG_CLIENT_TOKEN",
        "NEXT_PUBLIC_DATADOG_SITE",
        "NEXT_PUBLIC_DATADOG_SERVICE_NAME",
        "NEXT_PUBLIC_GA_MEASUREMENT_ID",
        "ARCJET_KEY",
        "ARCJET_ENV",
        "NODE_ENV",
        "VERCEL",
        "VERCEL_ENV",
        "VERCEL_URL"
      ]
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "dev:https": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^lint"],
      "outputs": []
    },
    "lint:fix": {
      "dependsOn": ["^lint:fix"],
      "outputs": [],
      "cache": false
    },
    "type-check": {
      "dependsOn": ["^build"],
      "outputs": ["*.tsbuildinfo"]
    },
    "clean": {
      "cache": false
    }
  }
}
